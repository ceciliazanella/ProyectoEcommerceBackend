<main class="profile-container">

  <h3>{{profileMessage}}</h3>

  <div id="error-message" class="error-message" style="display:none;"></div>

  <div class="profile-details">
    <h4>Tus Chocodatos 🔖</h4>
    <p><strong>Nombre: </strong>{{user.first_name}}</p>
    <p><strong>Apellido: </strong>{{user.last_name}}</p>
    <p><strong>💌 Correo: </strong>{{user.email}}</p>
    <p><strong>🙊 Rol --> </strong>{{user.role}}</p>
  </div>

  <div class="buttons-container" id="buttons-container">
    {{#if (eq user.role "admin")}}
    <button id="admin-button" class="btn-warning">Administrar Productos <span class="emoji">🛠️</span></button>
    {{else}}
    <button id="products-button" class="btn-primary"><span class="emoji">🏠</span></button>
    <button id="cart-button" class="btn-danger"><span class="emoji">🛒</span></button>
    {{/if}}
  </div>

</main>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const adminButton = document.getElementById("admin-button");
    const productsButton = document.getElementById("products-button");
    const cartButton = document.getElementById("cart-button");

    if (adminButton) {
      adminButton.addEventListener("click", () => {
        window.location.href = "/products";
      });
    }

    if (productsButton) {
      productsButton.addEventListener("click", () => {
        window.location.href = "/";
      });
    }

    if (cartButton) {
      cartButton.addEventListener("click", () => {
        window.location.href = "/cart";
      });
    }
  });
</script>